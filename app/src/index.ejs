<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>电缆断线检测控制系统</title>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no;" name="viewport" >
    <link href="./static/animate.css" rel="stylesheet">
    <script>
        console.time('T')
    </script>
    <% if (htmlWebpackPlugin.options.nodeModules) { %>
      <!-- Add `node_modules/` to global paths so `require` works properly in development -->
      <script>
        require('module').globalPaths.push('<%= htmlWebpackPlugin.options.nodeModules.replace(/\\/g, '\\\\') %>')
      </script>
    <% } %>
      <style>
          html,body {
              width: 100%;
              height: 100%;
              font-family: "Microsoft YaHei", "微软雅黑", Arial, sans-serif;
              font-size: 20px;
              color: #fff;
              margin: 0;
              padding: 0;
              user-select: none;
              width: 1024px;
              height: 760px;
              overflow: hidden;
          }
          body{
              padding: 0px;
              margin: 0px;
              /*background: url("/static/images/commonBj.png")*/
          }
          #app {
              width: 100%;
              height: 100%;
              /*background: url("../static/images/welcome.jpg");*/
          }
          .vs-pre-loading {
              position: absolute;
              left: 0px;
              top: 0px;
              width: 100%;
              height: 100%;
              background: #283247;
              background: #283247 url("./static/img/bg.jpg");
          }
          .welcome-footer {
              width: 100%;
              height: 60px;
              background-color: #1d2236;
              position: absolute;
              left: 0;
              bottom:0;
              box-sizing: border-box;
              display: flex;
              justify-content: space-between;
              padding: 30px;
              font-size: 18px;
              align-items: center;
          }
          .site-name {
              text-align: center;
              height: 48px;
              font-size: 48px;
              font-weight: normal;
              font-stretch: normal;
              line-height: 40px;
              letter-spacing: 5px;
              color: #ffffff;
          }
          .reflect {
             -webkit-box-reflect: below 1px  linear-gradient(rgba(0,0,0,0) 20%,  rgba(0,0,0,0.1) 90%, rgba(0,0,0,0.2));
          }
          .welcome {
              margin-top: 218px;
              text-align: center;
          }
          .slideShine {
              width: 1000px;
              font-family: "Microsoft YaHei";
              text-align: center;
              background: #ffffff -webkit-linear-gradient(left, #e5eaff, #fff89b) 0 0 no-repeat;
              -webkit-background-size: 100px;
              -webkit-background-clip: text;
              -webkit-text-fill-color: rgba(255, 255, 255, 0.1);
              -webkit-animation: slideShine 3s infinite;
          }

          @-webkit-keyframes slideShine {
              0% {
                  background-position: 0 0;
              }
              100% {
                  background-position: 100% 100%;
              }
          }
      </style>
  </head>
  <body onload="load()">
    <div id="app">

    </div>
    <div class="vs-pre-loading animated">
        <div class="welcome">
            <img src="./static/img/logo.jpg" alt="" style="border-radius: 6px /4px;">
            <p class="site-name reflect slideShine" style="margin: 32px;">
                电缆断线检测控制系统
            </p>
        </div>
        <div class="welcome-footer">
            <div>V0.1.13</div>
            <div><img src="./static/img/vsz-logo.png" alt=""></div>
        </div>

    </div>
    <!-- Set `__static` path to static files in production -->
    <% if (!process.browser) { %>
    <script>
        if (process.env.NODE_ENV !== 'development') window.__static = require('path').join(__dirname, '/static').replace(/\\/g, '\\\\')
    </script>
    <% } %>


    <!-- webpack builds are automatically injected -->
  </body>
  <script>
      var preLoadDom = document.querySelector('.vs-pre-loading')
      preLoadDom.addEventListener("animationend", function () {
      this.style.display =  'none'
    });
      function load () {
        setTimeout(function () {
          preLoadDom.classList.add('fadeOut')
        }, 3000)
      }
  </script>
</html>
